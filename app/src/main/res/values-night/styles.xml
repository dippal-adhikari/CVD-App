<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CVDDraft1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Apply primary color to theme elements -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Background and text colors -->
        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>

        <!-- Custom button style -->
        <item name="android:buttonStyle">@style/Widget.Button.CVDDraft1</item>
    </style>

    <!-- Custom Button Style -->
    <style name="Widget.Button.CVDDraft1" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/colorPrimary</item> <!-- Primary color for buttons -->
        <item name="android:textColor">@color/buttonText</item> <!-- White text on buttons -->
    </style>
</resources>



